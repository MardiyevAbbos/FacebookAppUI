<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="105dp"
        android:layout_height="180dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shape_corners_create_story">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:paddingLeft="1.2dp"
            android:paddingTop="1.2dp"
            android:paddingRight="1.2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_photo"
            app:shapeAppearanceOverlay="@style/rounded_corner_create" />

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40.5dp"
            android:background="@drawable/shape_circle_border">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_circle" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Create story"
            android:textColor="#000000"
            android:textSize="14sp" />

    </FrameLayout>

</LinearLayout>